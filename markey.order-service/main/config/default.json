{
  "server": {
    "port": 3002,
    "host": "localhost",
    "api_version": "/api/v1"
  },
  "microservices": {
    "shopping": {
      "url": "http://localhost:3001",
      "api": {
        "get_shopping_cart": {
          "endpoint": "/cart/by-shopper"
        }
      }
    }
  },
  "request_limit": {
    "limit": "100kb"
  },
  "cors": {
    "origin": "*",
    "methods": ["GET", "POST", "PUT", "DELETE", "UPDATE"],
    "allowedHeaders": [
      "X-Requested-With",
      "X-HTTP-Method-Override",
      "Content-Type",
      "Accept",
      "Observe",
      "Authorization"
    ]
  },
  "helmet": false,
  "enviroment": "default",
  "morgan": {
    "format": "dev"
  },
  "swagger": {
    "enable": false
  },
  "database": {
    "sync": false
  }
}
