{
  "server": {
    "port": 3001,
    "host": "localhost",
    "api_version": "/api/v1",
    "url": "http://localhost:3001/api/v1"
  },
  "gateway": {
    "url": "http://localhost:8000/shopping-service/api/v1"
  },
  "request_limit": {
    "limit": "100kb"
  },
  "cors": {
    "origin": "*",
    "methods": ["GET", "POST", "PUT", "DELETE", "UPDATE"],
    "allowedHeaders": [
      "X-Requested-With",
      "X-HTTP-Method-Override",
      "Content-Type",
      "Accept",
      "Observe",
      "Authorization"
    ]
  },
  "helmet": false,
  "enviroment": "default",
  "morgan": {
    "format": "dev"
  },
  "swagger": {
    "enable": false
  },
  "database": {
    "sync": true
  }
}
